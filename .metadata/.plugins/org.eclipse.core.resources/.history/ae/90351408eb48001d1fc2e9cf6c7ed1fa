package controle;

import java.util.ArrayList;

import javax.swing.JOptionPane;
import visualizacao.EntradaSaida;
import modelo.*;

public class Controladora {

	private Carro carro = null;

	public void exibeMenu() {
		int opcao;
		boolean validadora = false;

		do {
			opcao = EntradaSaida.solicitaOpcao();

			switch (opcao) {
			case 0:
				this.carro = new Carro();
				String descricao = EntradaSaida.solicitaDescricao("carro", 0);
				String cor = EntradaSaida.solicitaCor();
				break;
			case 1:
				JOptionPane.showMessageDialog(null, "vende");
				break;
			case 2:
				JOptionPane.showMessageDialog(null, "informação");
				break;
			}
		} while (opcao != 3);

		EntradaSaida.exibeMsgEncerrar();
		System.exit(0);

	}

}
